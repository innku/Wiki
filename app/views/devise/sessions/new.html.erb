<h2><%= t(".new_session") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "small_form"}) do |f| %>

  <p><%= f.label :email %>
  <%= f.text_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label t('.remember_me') %></div>
  <% end %>

  <div class="clear"></div>
  <div class="actions">
    <%= f.submit  t('.create_session')%>
  </div>
<% end %>

<br/>

<%= render :partial => "devise/shared/links" %>
