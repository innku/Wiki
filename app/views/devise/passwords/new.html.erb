<h2><%= t(".new_password") %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "small_form" }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.submit t(".reset_password") %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
